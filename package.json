{
   "name": "next-ecommerce-app",
   "version": "1.0.0",
   "private": true,
   "description": "Next.js e-commerce app with Prisma and Tailwind CSS",
   "author": "Krzysztof Kryczka",
   "type": "module",
   "scripts": {
      "dev": "next dev --turbopack",
      "build": "prisma generate && prisma migrate deploy && next build",
      "lint": "next lint",
